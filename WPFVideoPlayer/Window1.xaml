<Window x:Class="WPFVideoPlayer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFVideoPlayer"
        xmlns:components="clr-namespace:WPFVideoPlayer.Components"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner">

    <StackPanel
        Background="Transparent"
          Width="986"
            Height="720">

        <components:MyVideoPlayer
            Source="videos/tomjerry.mp4"
            ThumbnailSource="images/thumbnail.png"
            Width="986"
            Height="720"/>

    </StackPanel>

</Window>
